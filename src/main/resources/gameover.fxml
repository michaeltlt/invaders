<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="game.GameOverController"
            prefHeight="600.0" prefWidth="800.0">

    <stylesheets>
        <URL value="@gameover.css" />
    </stylesheets>

    <VBox styleClass="info" prefWidth="800" prefHeight="600" alignment="CENTER">
        <children>
            <Label styleClass="title" text="GAME OVER"></Label>
            <HBox alignment="CENTER">
                <children>
                    <Label styleClass="score" text="Your score is "></Label>
                    <Label styleClass="score" fx:id="score" text="0"></Label>
                </children>
            </HBox>
            <Label styleClass="keys" text="press SPACE for restart or Q for quit"></Label>
        </children>
    </VBox>

</AnchorPane>
